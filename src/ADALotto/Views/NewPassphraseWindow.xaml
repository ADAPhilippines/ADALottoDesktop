<Window 
	xmlns="https://github.com/avaloniaui" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:vm="clr-namespace:ADALotto.ViewModels;assembly=ADALotto"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	d:DesignWidth="400"
	d:DesignHeight="450"
	x:Class="ADALotto.Views.NewPassphraseWindow"
	Icon="/Assets/avalonia-logo.ico"
	Title="Create a passphrase!"
	Width="1000" Height="600" MaxWidth="400" MaxHeight="200" CanResize="false" WindowStartupLocation="CenterOwner">
	<StackPanel>
		<TextBox Name="NewPassphrase" Watermark="New Passphrase" Padding="10" Margin="20,10" PasswordChar="*" />
		<TextBox Name="ConfirmPassphrase" Watermark="Confirm Passphrase" Padding="10" Margin="20, 10" PasswordChar="*" />
		<Button Padding="10" Margin="20, 10" Click="OnBtnDoItPressed">Do it!</Button>
	</StackPanel>
</Window>